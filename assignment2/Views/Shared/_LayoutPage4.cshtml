<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Details.css" />
    <link rel="stylesheet" href="~/Content/PagedList.css"/>
</head>
<body>
    <header class="menu">
        <ul>
            <li><b>Food Tour in China </b></li>
            <li><a href="~/Home/Index">Home</a></li>
            <li><a href="~/Home/Eight_cuisine">Eight major Chinese cuisines</a></li>
            <li><a href="~/Home/local_special_dishes">Local specialty dishes</a></li>
            <li><a class="active" href="~/local_dishes/Index">Details</a></li>
            <li><a href="~/Cuisines/Index">Cuisines</a></li>
            @using (Html.BeginForm("Index", "local_dishes", FormMethod.Get, new { @class = "Yuan" }))
            {
                <div class="form-group">
                    @Html.TextBox("Search", null, new { @class = "form-control", @placeHolder = "Srearch Dishes" })
                </div>
                <div>
                <button type="submit" class="searchbar">Search</button>
                    </div>
            }
        </ul>
        
    </header>
    <section>
        <nav class="navigation">
            <ul>
                <li><a href="~/Home/Index">Home</a></li>
                <li><a href="~/Home/Eight_cuisine">Eight major Chinese cuisines</a></li>
                <li><a href="~/Home/local_special_dishes">Local specialty dishes</a></li>
                <li><a href="~/local_dishes/Index">Details</a></li>
                <li><a href="~/Cuisines/Index">Cuisines</a></li>
            </ul>
           
        </nav>
        <article>

            @RenderBody()
            <div class="contact">
                <p>You are free to explore the food tour , if you have any advice or doubts,</p>
                <p>please contact us at:</p>
                <p><em>emile:<a href="mailto:sgreer@example.com/harpe">sgreer@example.com/harpe</a></em></p>
                <p><em>telephone:<a href="tel:(304) 555-7120">(304) 555-7120</a></em></p>
            </div>
        </article>
        <footer>
            welcome to my food tour &nbsp;&nbsp;&nbsp;&nbsp;contact :&nbsp;
            <a href="mailto:sgreer@example.com/harpe">sgreer@example.com/harpe</a>
        </footer>
    </section>
    @Scripts.Render("~/ bundles / jquery")
    @RenderSection("scripts", required: false)
</body>
<style>
    .searchbar{
        padding-top:10px;
        
    }
    .Yuan div{
        display:inline;
    }
    .Yuan {
        color: white;
        text-align: center;
        padding: 17px 20px;
        text-decoration: none;
    }
    .Yuan .form-group{
        height:20px;
    }
</style>
</html>
